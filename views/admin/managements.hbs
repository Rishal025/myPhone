<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css"
    href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
  <link rel="stylesheet" type="text/css"
    href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">
  <title>products</title>

</head>

<body style="background-color:lightgrey;">
  <section id="main" class="main">
    <div class="container">
      <div class="row">
        <a href="/admin/add-brand" class="btn btn-success mx-auto mt-5 text-center mb-5" style="width:100%; height: 50px;"><b>ADD BRAND</b></a>
      </div>
      <table class="table mt-5" id="myTable">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Thumpnail</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
           
          </tr>
        </thead>
        <tbody>
            {{#each response}}
          <tr>  
               <td></td>  
               <td>{{this.brandname}}</td>
               <td><img src="/images/product/{{this.img.[0]}}" height="60px" width="80px" alt=""></td>
               <td>{{this.status}}</td>
               <td> <a href="/admin/edit-brand/{{this._id}}" class="btn btn-primary">edit</a>
  
                  <a class="btn btn-danger" onclick="deleteBrand('{{this._id}}')">delete</a>
              </td>
            
             {{!-- <td><img src="/product-images/{{this._id}}.jpg" height="60px" width="80px" alt=""></td> --}}
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
  <script type="text/javascript" charset="utf8"
    src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
  <script type="text/javascript" charset="utf8"
    src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
</body>

</html>

<script>
   $(document).ready(function(){
       $('#myTable').DataTable({
        "fnRowCallback": function( nRow, aData, iDisplayIndex, iDisplayIndexFull ) {
        $('td:eq(0)', nRow).html(iDisplayIndexFull +1);
    }
});
       
    });
</script>
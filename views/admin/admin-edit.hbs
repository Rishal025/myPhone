        <section class="section " style="margin-right: 300px;">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> </h5>
                            
                            <!-- General Form Elements -->
                            <form  action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data" onsubmit="return validation()">
                                <div class="row mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Product Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="productname" id="productname" value='{{product.productname}}'
                                            onkeyup="validateProductName()"><span id="name" class="text-danger"></span>
                                    </div>
                                </div>
                               
                                <div class="row mb-3">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Product Price</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="price"  onkeyup="validPrice()" value='{{product.price}}'
                                            id="price"><span id="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputNumber" class="col-sm-2 col-form-label">Stock Left</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="stock" value='{{product.stock}}'
                                            onkeyup="validStock()" id="stock"><span id="Stock"
                                            class="text-danger"></span>
                                    </div>
                                </div>

                               


                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">Brand</label>
                                    
                                    <div class="col-sm-10">
                                        <select id="ShowDataList" class="form-control" name="brand" required>
                                            {{#each brand}}
                                            <option value="{{this._id}}">{{this.brandname}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    
                                </div>

                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">STORAGE</label>
                                    <div class="col-sm-10">
                                        <input list="ShowDataList1" class="form-control" id="ram" name="storage" value='{{product.storage}}'
                                            onkeyup="validram()"><span id="ROM" class="text-danger"></span>
                                        <datalist id="ShowDataList1">
                                            <option value="16gb">
                                            <option value="32gb">
                                            <option value="64gb">
                                            <option value="128gb">
                                            <option value="256gb">
                                        </datalist>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputNumber" class="col-sm-2 col-form-label">Product Image</label>
                                    <div class="col-sm-10">
                                        <div class="row">
                                            <img src="/images/product/{{product.img.[3]}}" id="imgView" alt="" style="width: 80px;height:auto;">
                                            <img src="/images/product/{{product.img.[1]}}" id="imgView" alt="" style="width: 80px;height:auto;">
                                            <img src="/images/product/{{product.img.[2]}}" id="imgView" alt="" style="width: 80px;height:auto;">
                                            <img src="/images/product/{{product.img.[0]}}" id="imgView" alt="" style="width: 80px;height:auto;">
                                        </div>
                                         
                                        <input class="form-control mt-2" type="file" id="formFile" name="image" onchange="viewImage(event)">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" style="height: 100px" name="Description" value="{{product.Description}}"
                                            id="Description" onkeyup="validateProductDescription()" val></input><span
                                            id="productdescription" class="text-danger"></span>
                                    </div>
                                </div>

                               

                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">Submit Button</label>
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit Form</button>
                                    </div>
                                </div>

                            </form><!-- End General Form Elements -->

                        </div>

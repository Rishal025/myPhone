    <script>
        function viewImage(event){
            document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
        }
    </script>

    <script>
        var errorName = document.getElementById('name')
        var errordescription = document.getElementById('productdescription')
        var errorBrand = document.getElementById('Brand')
        var errorRam = document.getElementById('RAM')
        var errorPrice = document.getElementById('Price')
        var errorStock = document.getElementById('Stock')
        function validateProductName() {
            const name = document.getElementById('productname').value;
            if (name == "") {
                errorName.innerHTML = '*required'
                return false
            }
            if (!name.match(/^[a-zA-Z0-9 ]*$/)) {
                errorName.innerHTML = '*'
                return false
            }
            if (name.match(/^[ ]*$/)) {
                errorName.innerHTML = '*required'
                return false
            }
            errorName.innerHTML = null
            return true
        }

        function validateProductDescription() {
            const name = document.getElementById('Description').value;
            if (name == "") {
                errordescription.innerHTML = '*required'
                return false
            }
             if (name.length < 10) {

                errordescription.innerHTML = "enter proper description "
                return false
            }
            errordescription.innerHTML = null
            return true
        }
        function validBrand() {
            const brand = document.getElementById('brand').value
            if (brand == "") {
                errorBrand.innerHTML = '*required'
                return false
            }
            errorBrand.innerHTML = null
            return true
        }
        function validram() {
            const ram = document.getElementById('ram').value
            if (ram == "") {
                errorRam.innerHTML = '*required'
                return false
            }
            errorBrand.innerHTML = null
            return true
        }
        function validPrice() {
            const price = document.getElementById('price').value
            if (price == "") {
                errorPrice.innerHTML = '*required'
                return false
            }
            errorPrice.innerHTML = null
            return true
        }
        function validStock() {
            const stock = document.getElementById('stock').value
            if (stock == "") {
                errorStock.innerHTML = '*required'
                return false
            }
            errorStock.innerHTML = null
            return true
        }

        function validation() {
            if (!validateProductName() || !validateProductDescription() || !validBrand() || !validram() || !validPrice() || !validStock()) {
                return false
            }
            return true
        }
    </script>

